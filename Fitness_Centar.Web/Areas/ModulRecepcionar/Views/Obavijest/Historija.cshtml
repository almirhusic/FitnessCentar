@using Fitness_Centar.Data
@using Fitness_Centar.Data.Models
@model List<HistorijaIzmjenaObavijesti>

@{
    ViewData["Title"] = "Historija obavijesti";
    MyContext ctx = (MyContext)ViewData["_ctx"];
}

<section class="content">
    <div class="box box-default">
        <div class="box-header with-border">
            <div class="col-sm-12 col-lg-6">
                <h4 class="box-title">Historija izmjena obavijesti</h4>
            </div>
            <div class="col-sm-12 col-lg-6 text-right">
                <a href="/ModulRecepcionar/Obavijest/Index" class="btn btn-default">Zatvori</a>
            </div>            
        </div>

        @foreach (HistorijaIzmjenaObavijesti o in Model)
        {
            <section class="content obavijest">
                <div class="box">
                    <div class="box-header with-border">
                        <h3 class="box-title custom">#@(Model.IndexOf(o) + 1) @o.StariNaslov</h3>
                    </div>
                    <div class="box-body">
                        <div class="text-justify obavijesti-sadrzaj">
                            <p class="sadrzaj">@o.StariSadrzaj</p>
                        </div>
                    </div>
                    <div class="box-footer">
                        <span>Datum izmjene: @o.DatumIzmjene</span>
                    </div>
                </div>
            </section>
        }

        <div class="box-footer">
            <div>
                <span>Ukupno izmjena ove obavijesti: <b>@Model.Count</b></span>
            </div>
        </div>
    </div>
</section>