@model Fitness_Centar.Web.Areas.ModulRecepcionar.ViewModels.VrstaClanarineUrediVM
@{
    Layout = null;
}

<form method="post" data-ajax-url="/ModulRecepcionar/VrstaClanarine/Snimi" data-ajax="true" data-ajax-method="post" data-ajax-update="#vrstaClanarine">
    @Html.HiddenFor(x => x.VrstaClanarineId)
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="Naziv" class="col-sm-5 control-label">Naziv</label>
        <div class="col-sm-7">
            @Html.TextBoxFor(x => x.Naziv, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Naziv)
        </div>
    </div>

    <div class="form-group">
        <label for="Cijena" class="col-sm-5 control-label">Cijena</label>
        <div class="col-sm-7">
            @Html.TextBoxFor(x => x.Cijena, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Cijena)
        </div>
    </div>

    <div class="form-group">
        <label for="Opis" class="col-sm-5 control-label">Opis</label>
        <div class="col-sm-7">
            @Html.TextBoxFor(x => x.Opis, new { @class = "form-control", placeholder = "Opcionalno" })
            @Html.ValidationMessageFor(x => x.Opis)
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12 text-right margin-top-9">
            <input type="submit" value="Snimi" class="btn btn-success" />
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            @if (ViewData["porukaUspjesno"] != null)
            {
                <br />
                <div class="alert alert-success">
                    <b>@ViewData["porukaUspjesno"]</b>
                </div>
            }
            else if (ViewData["porukaNeuspjesno"] != null)
            {
                <br />
                <div class="alert alert-danger">
                    <b>@ViewData["porukaNeuspjesno"]</b><br />
                    <b>@ViewData["nazivGreska"]</b>
                </div>
            }
        </div>
    </div>
</form>